{
  "branches": ["master"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "writerOpts": { "bullet": "-" }
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "npm run build",
        "publishCmd": "if [ -n \"$NPM_TOKEN\" ]; then npm config set //registry.npmjs.org/:_authToken \"$NPM_TOKEN\" --location=user; npm publish --access public; else echo 'Skipping npm publish because NPM_TOKEN is not set.'; fi"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "vscode-shell-*.vsix",
            "label": "VSIX Package"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "package-lock.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
